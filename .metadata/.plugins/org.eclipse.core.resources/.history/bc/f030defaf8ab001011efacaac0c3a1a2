package com.example.githubactivity.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.githubactivity.model.Event;
import com.example.githubactivity.service.GithubService;

@RestController
@RequestMapping("/activity")
public class GithubController {
//	@GetMapping("/test")
//	public String test() {
//		return "Okay!";
//	}
	
	@Autowired
	private GithubService githubService;
	
	@GetMapping("/{userName}")
	public List<Event> getGithubActivity(@PathVariable("userName") String userName) {
		return githubService.fetchUserActivity(userName);
		
	}
}